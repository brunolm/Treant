<Window x:Class="Treant.Views.BoardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="300" Width="300">
    <Window.Title>
        <MultiBinding StringFormat="{}{0} board {1}">
            <Binding Path="CurrentBoard.Name" />
            <Binding Path="WindowTitle" />
        </MultiBinding>
    </Window.Title>
    <Grid>
        <TextBlock Text="{Binding CurrentBoard.Name}" />
    </Grid>
</Window>
